<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.jamiistrong.codebent"
        versionCode = "10" 
        version     = "2.0.0" >

    <!-- versionCode is optional and Android only -->

        <name>Codebent HTML5 Editor</name>

        <description>
            Code on the go 
        </description>

        <author email="jamii.alqaweeya@gmail.com">
            jamiistrong
        </author>
         
         <feature name="debug-server" required="true">
            <param name="domain" value="http://custom.com"/>
            <param name="key" value="some_unique_key"/>
        </feature>


       
        <gap:platform name="android" />
        <preference name="orientation" value="portrait" />
        <preference name="fullscreen" value="false" />
        <preference name="splash-screen-duration" value="5000"/>
        <preference name="permissions" value="none"/>
        <preference name="target-device" value="tablet"/>
        <preference name="target-device" value="handset"/>

        <icon src="c.png" width="512" height="512"/>
        <!-- 512 x 512-->
        <gap:splash src="splash.png" gap:platform="android" width="320" height="480"/>
    </widget>
    